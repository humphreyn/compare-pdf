{
	"name": "compare-pdf",
	"version": "1.1.8",
	"description": "Standalone node module that compares pdfs",
	"main": "./functions/comparePdf",
	"types": "./types/comparePdf.d.ts",
	"scripts": {
		"clean": "(del /f/s/q node_modules > nul && rmdir /s/q node_modules && del package-lock.json) || exit 0",
		"clean:install": "npm run clean && npm cache clean --force && npm install",
		"lint": "eslint . --fix",
		"mocha": "node ./node_modules/mocha/bin/mocha",
		"pretty": "npx prettier --write .",
		"test": "mocha --recursive --timeout 600000",
		"test-ts": "env TS_NODE_PROJECT=\"tsconfig.testing.json\" mocha --recursive --timeout 600000 --require ts-node/register 'test/**/*.ts'",
		"prepare": "node -e \"const gitDir = !require('fs').existsSync('.git'); if (!gitDir) process.exit(1);\" || node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/marcdacz/compare-pdf.git"
	},
	"engines": {
		"node": ">=16"
	},
	"homepage": "https://github.com/marcdacz/compare-pdf#readme",
	"keywords": [
		"pdf",
		"graphicsMagick",
		"imageMagick",
		"compare pdf",
		"test pdf"
	],
	"devDependencies": {
		"@prettier/plugin-xml": "^2.2.0",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"@types/chai": "^4.3.1",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.0.0",
		"chai": "^4.3.7",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-markdown": "^3.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-mocha": "^10.1.0",
		"lint-staged": "^13.2.0",
		"mocha": "^10.2.0",
		"prettier": "^2.8.4",
		"ts-node": "^10.8.1",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"canvas": "^2.11.2",
		"fs-extra": "^11.1.0",
		"gm": "^1.25.0",
		"lodash": "^4.17.21",
		"pdfjs-dist": "3.4.120",
		"pixelmatch": "^5.3.0",
		"pngjs": "^7.0.0",
		"typescript": "^4.9.5"
	},
	"lint-staged": {
		"**/*": [
			"eslint --cache --fix",
			"prettier --cache --write --ignore-unknown"
		]
	}
}
